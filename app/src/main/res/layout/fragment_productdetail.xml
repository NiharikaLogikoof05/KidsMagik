                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-5dp">
                                    <TextView
                                        android:id="@+id/tvproductprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rs. 15.00"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#F6A926"
                                        android:textSize="@dimen/_12sdp"/>
                                    <TextView
                                        android:id="@+id/tvinstock"
                                        android:layout_toRightOf="@id/tvproductprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="In Stock"
                                        android:textFontWeight="500"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#20C107"
                                        android:textSize="@dimen/_12sdp"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/ivheart"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:background="@drawable/uncheked_wishlist"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="@dimen/_20sdp"/>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right">
                                    <TextView
                                        android:id="@+id/tvreview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 Review"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#CCC9C9"
                                        android:textSize="@dimen/_10sdp"/>
