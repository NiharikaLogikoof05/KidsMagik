                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="#CCC9C9" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_10sdp"
