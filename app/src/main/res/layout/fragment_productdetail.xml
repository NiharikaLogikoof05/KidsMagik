                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="#CCC9C9" />
                            <LinearLayout
                                android:weightSum="3"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp">
                                <LinearLayout
                                    android:weightSum="2"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Name"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#808082"
                                        android:textSize="@dimen/_10sdp"/>
                                    <TextView
                                        android:id="@+id/tvproductnm"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Uni-Ball Pen 3"
                                        android:textFontWeight="500"
                                        android:layout_marginLeft="@dimen/_25sdp"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#808082"
                                        android:textSize="@dimen/_10sdp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:weightSum="2"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Category"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#808082"
                                        android:textSize="@dimen/_10sdp"/>
                                    <TextView
                                        android:id="@+id/tvproductcategory"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pen"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#808082"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:textSize="@dimen/_10sdp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:weightSum="2"
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Product Run"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#808082"
                                        android:textSize="@dimen/_10sdp"/>
                                    <TextView
                                        android:id="@+id/tvproductrun"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2km"
                                        android:textFontWeight="500"
                                        android:fontFamily="@font/poppinsregular_400"
                                        android:textColor="#808082"
                                        android:layout_marginLeft="@dimen/_40sdp"
                                        android:textSize="@dimen/_10sdp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                 <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp"
                     android:layout_marginTop="@dimen/_10sdp"
                     android:layout_marginLeft="@dimen/_5sdp"
                     android:layout_marginRight="@dimen/_5sdp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Terms and Policy"
                                android:textFontWeight="500"
                                android:fontFamily="@font/poppinsregular_400"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11sdp"/>
                            <ImageView
                                android:id="@+id/ivtermspolicy"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_11sdp"
                                android:background="@drawable/dropdown1"
                                android:layout_gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/_20sdp"/>
                        </RelativeLayout>
                        <RelativeLayout
