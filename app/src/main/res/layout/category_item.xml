<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/laydiscount"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fbfafa"
        app:cardCornerRadius="@dimen/_25sdp"
        android:layout_margin="@dimen/_5sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layviewall"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/left_black">
                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/daimond"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/ivproduct"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@drawable/uniballpen"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_10sdp"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/ivheart"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/uncheked_wishlist"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/tvproductname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uni Ball Pen 7"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppinsregular_400"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"/>
            <RelativeLayout
                android:id="@+id/layfotter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#CCC9C9">
                    <TextView
                        android:id="@+id/tvactualprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textFontWeight="600"
                        android:fontFamily="@font/poppinsregular_400"
                        android:gravity="center"
                        android:text="Rs 20.00"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/_10sdp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4sdp">
                    <RatingBar
                        android:id="@+id/rating_timeliness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="0.9"
                        android:scaleX="0.9"
                        android:scaleY="0.9"
                        android:isIndicator="false"
                        android:layout_centerVertical="true"
                        android:progressTint="@color/white"
                        android:layout_marginTop="2dp"
                        android:progressBackgroundTint="#CCC9C9"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvratting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.0 Rating"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppinsregular_400"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="#CCC9C9"
                        android:layout_marginRight="@dimen/_15sdp"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>