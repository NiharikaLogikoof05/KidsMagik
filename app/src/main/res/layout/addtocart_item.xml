<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp">
        <androidx.cardview.widget.CardView
            android:id="@+id/lay"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_margin="@dimen/_5sdp">
            <ImageView
                android:id="@+id/ivproduct"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/uniball3"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_toRightOf="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp">
            <TextView
                android:id="@+id/tvtaxcollorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uni-ball Pen3"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsregular_400"
                android:textFontWeight="600"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp">
                <TextView
                    android:id="@+id/texttaxcollor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Style:"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="#72665F"
                    android:fontFamily="@font/poppinsregular_400"
                    android:textFontWeight="600"/>
                <TextView
                    android:id="@+id/tvstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regular"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="#989390"
                    android:fontFamily="@font/poppinsregular_400"
                    android:textFontWeight="500"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Color:"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="#72665F"
                    android:fontFamily="@font/poppinsregular_400"
                    android:textFontWeight="600"/>
                <TextView
                    android:id="@+id/tvcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="#989390"
                    android:fontFamily="@font/poppinsregular_400"
                    android:textFontWeight="500"/>
            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs. 15.00"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#FFA52D"
                    android:fontFamily="@font/poppinsregular_400"
                    android:textFontWeight="600"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/_20sdp">
                    <RelativeLayout
                        android:layout_width="@dimen/_43sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/ract_storkgrey">
                        <Spinner
                            android:id="@+id/spcount"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@null"/>
                        <ImageView
                            android:id="@+id/ivdrop"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:src="@drawable/dropdown1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/edit"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="#989390"
                        android:fontFamily="@font/poppinsregular_400"
                        android:textFontWeight="600"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_30sdp">
                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/delete"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/_9sdp"
                        android:textColor="#989390"
                        android:fontFamily="@font/poppinsregular_400"
                        android:textFontWeight="600"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#EDEFEE"
        android:layout_marginTop="-4dp"/>
</LinearLayout>