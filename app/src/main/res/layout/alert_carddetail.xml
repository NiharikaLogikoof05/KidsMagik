<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_trans"
    android:layout_centerInParent="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/ract_white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:textColorHint="#777372"
                    app:boxStrokeColor="#ffd006"
                    app:boxStrokeWidth="0.5dp"
                    app:counterOverflowTextAppearance="@style/CounterOverFlow"
                    app:counterTextAppearance="@style/CounterText"
                    app:hintTextAppearance="@style/HintText"
                    app:hintTextColor="#777372">
                    <EditText
                        android:id="@+id/edcardno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@null"
                        android:cursorVisible="true"
                        android:fontFamily="@font/poppinsregular_400"
                        android:gravity="center_vertical"
                        android:hint=""
                        android:inputType="number"
                        android:paddingLeft="@dimen/_10sdp"
                        android:singleLine="true"
                        android:text=""
                        android:maxLength="12"
                        android:ems="12"
                        android:textColor="#141312"
                        android:textColorHint="#141312"
                        android:textSize="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvheader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expiry date"
                        android:gravity="left"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#CDCDCA"
                        android:fontFamily="@font/poppinsregular_400"
                        android:textFontWeight="300" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">
                        <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:gravity="center"
                           android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/ract_yellowborder">
                            <Spinner
                                android:id="@+id/spmonth"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@null"
                                android:gravity="center"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/ract_yellowborder">
                            <Spinner
                                android:id="@+id/spyear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="center"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvccv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CVV"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#CDCDCA"
                        android:fontFamily="@font/poppinsregular_400"
                        android:textFontWeight="300"
                        android:layout_marginRight="@dimen/_30sdp"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/ract_yellowborder">
                        <EditText
                            android:id="@+id/edcvvno"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:hint=""
                            android:textColorHint="#CDCDCA"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="3"
                            android:ems="3"
                            android:layout_centerVertical="true"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/laydone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/ract_orgbutton">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppinsregular_400"
                    android:textFontWeight="500" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>